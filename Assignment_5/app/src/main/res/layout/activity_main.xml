<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/storeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the store!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/donutButton"
        android:layout_width="140dp"
        android:layout_height="83dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="240dp"
        android:adjustViewBounds="true"
        android:background="@drawable/donut"
        android:scaleType="fitCenter"
        android:text="Donuts"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/coffeeButton"
        android:layout_width="140dp"
        android:layout_height="83dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="36dp"
        android:adjustViewBounds="true"
        android:background="@drawable/coffee"
        android:scaleType="fitCenter"
        android:text="Coffee"
        android:textColor="#FFC0CB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/basketButton"
        android:layout_width="140dp"
        android:layout_height="83dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="83dp"
        android:adjustViewBounds="true"
        android:background="@drawable/basket"
        android:scaleType="fitCenter"
        android:text="Basket"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeText" />

    <ImageButton
        android:id="@+id/storeButton"
        android:layout_width="140dp"
        android:layout_height="83dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/store"
        android:scaleType="fitCenter"
        android:text="Store"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeText" />
</androidx.constraintlayout.widget.ConstraintLayout>